doctype html
html(lang="en")
  block config
  head
    title= pageData && pageData.pageTitle || 'Page title'
    meta(content=pageData && pageData.pageDescription || 'Page description' name="description")
    meta(
      name="viewport" 
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    )
    meta(
      name="robots"
      content="noindex"
    )
    //- this checks to see the the "embed" property is set to "true"
    //- in the package.json file
    if config.entry.css.embed
      link(rel="stylesheet" href=`${baseUrl}${embedPath}` embed)
  body
    include ../top-menu/top-menu
    .content
      block awesome-content
    //- The style.css is at the bottom so it doesn't
    //- block the loading of assets
    if config.entry.css.external
      link(rel="stylesheet", href=`${baseUrl}style.css`)
    include ../footer/footer
