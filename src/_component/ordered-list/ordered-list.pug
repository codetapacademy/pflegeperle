.ordered-list
  .ordered-list__title= heroInfo.title
  .ordered-list__body
    .custom-counter
      each item in heroInfo.list
        .count-me 
          .ordered-list__item-title= item.title 
          each secondItem in item.infoList
            .ordered-list__item-description= secondItem
  .ordered-list__image(
    style=`background-image: url(${heroInfo.imagePath})`
  )
